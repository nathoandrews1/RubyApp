<!-- Product section-->
<section class="py-5 itemBox">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6"><img class="card-img-top mb-2 mb-md-0" src="data:image/jpeg;base64," alt="..." /></div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @car.brand + " " + @car.model %></h1>
        <div class="fs-5 mb-4">
          <span class="text-decoration-line-through">$<%=@car.price + 50 %></span>
          <span>$<%=@car.price%></span>
        </div>
        <h5 class="bold">Horsepower: <%= @car.horsepower %><br></h5>
        <h5 class="bold">MPG: <%= @car.mpg %><br></h5>
        <h5 class="bold">Engine: <%= @car.engine %><br></h5>
        <div class="d-flex">
          <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
          <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi-cart-fill me-1"></i>
            Add to cart
          </button>
        </div>
      </div>
    </div>
  </div>
</section>



    <div class="galleryDiv">
      <%= render 'gallery/gallery' %>
    </div>

  <div class="adjustPos bottom">
    <h4>Reviews <%= @car.reviews.public_count %></h4>
    <%= render @car.reviews %>

    <% if current_user %>
      <% if current_user.role != "admin" %>
        <%= render 'reviews/form' %>
      <% end %>
    <% end %>
  </div>
</div>